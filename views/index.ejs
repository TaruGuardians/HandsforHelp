            <!-- options to select your region -->
            <option class="b" value="">Enter your state</option>
            <option class="b" value="Bihar">Bihar</option>
            <option class="b" value="Jharkhand">Jharkhand</option>
            <option class="b" value="West Bengal">West Bengal</option>
          </select>
